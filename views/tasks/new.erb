<h1>New task</h1>

<form action="/tasks" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" id="title">
  <select id="list" name="list_id">
    <% @lists.each do |list| %>
      <option value="<%= list.id %>"><%= list.title  %></option>
    <% end %>
  </select>
  <input type="submit">
</form>
