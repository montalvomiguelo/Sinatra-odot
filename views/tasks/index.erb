<h1>Tasks</h1>

<table>
  <thead>
    <th>Title</th>
    <th>List</th>
    <th>Completed at</th>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td>
          <a href="/tasks/<%= task.id %>">
            <%= task.title %>
          </a>
        </td>
        <td>
          <a href="/lists/<%= task.list.id %>">
            <%= task.list.title %>
          </a>
        </td>
        <td>
          <%= task.completed_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <a href="/tasks/new">New task</a>
</p>
